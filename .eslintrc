
// setup eslint airbnb
// yarn add  eslint@4.9.0 eslint-config-airbnb@16.1.0 eslint-plugin-import@2.7.0 eslint-plugin-react@7.4.0 eslint-plugin-jsx-a11y@6.0.2 --dev

{
    "extends" : "airbnb",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "browser" : true,
        "es6": true
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "comma-dangle": ["warn"],
        "no-unused-vars": ["error", { "vars": "local", "args": "none" }],
        "react/jsx-filename-extension": 0
    }
}